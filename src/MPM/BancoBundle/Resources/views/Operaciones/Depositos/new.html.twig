{% extends 'BancoBundle::layout.html.twig' %}


{% block main %}
    <h1>Nuevo Depósito</h1>

    <form class="form-horizontal" role="form" method="post">
        <div class="form-group">
            <label for="cuenta-owner" class="col-sm-2 control-label">Cuenta</label>
            <div class="col-sm-5">
                <select name="cuenta-owner" data-placeholder="Elija un Propietario" class="chosen" style="width: 100%; line-height: 34px;">
                    <option value="1">Matías Pierobón</option>
                </select>
            </div>
            <div class="col-sm-5">
                <select name="cuenta" data-placeholder="Elija la Cuenta" class="chosen" style="width: 100%; line-height: 34px;">
                    <option value="1">Cuenta 1</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="monto" class="col-sm-2 control-label">Monto</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="monto" placeholder="Monto">
            </div>
        </div>
        <div class="form-group">
            <label for="descripcion" class="col-sm-2 control-label">Descripción</label>
            <div class="col-sm-10">
                <textarea name="descripcion" class="wysihtml5" style="width: 100%;" rows="5"></textarea>
            </div>
            <script>
                $('.wysihtml5').wysihtml5({locale: "es-AR"});
                $('.chosen').chosen();
            </script>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="reset" class="btn btn-link">Restablecer</button>
                <button type="submit" class="btn btn-primary">Depositar</button>
            </div>
        </div>
    </form>

{% endblock %}


{% block javascripts %}
<script src="{{ asset('/js/wysihtml5-0.3.0.js') }}" type="text/javascript"></script>
<script src="{{ asset('/js/bootstrap3-wysihtml5.js') }}" type="text/javascript"></script>
<script src="{{ asset('/js/locales/bootstrap-wysihtml5.es-AR.js') }}" type="text/javascript"></script>
<script src="{{ asset('/js/chosen.jquery.js') }}" type="text/javascript"></script>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('/css/bootstrap3-wysiwyg5.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('/css/chosen.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('/css/bootstrap-chosen.css') }}" />
{% endblock %}