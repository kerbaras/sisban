{% extends 'BancoBundle::layout.html.twig' %}


{% block main %}
    <h1>Personas Registradas</h1>

    <div class="btn-group pull-right">
        <a href="{{ path('banco_personas_new') }}" class="btn btn-default ttp" data-toggle="tooltip" data-placement="top" title="Añadir Persona"><i class="glyphicon glyphicon-plus"></i></a>
        <a href="#" class="btn btn-default ttp" data-toggle="tooltip" data-placement="top" title="Buscar Depósitos"><i class="glyphicon glyphicon-search"></i></a>
        <a href="#" class="btn btn-default ttp" data-toggle="tooltip" data-placement="top" title="Imprimir Depósitos"><i class="glyphicon glyphicon-print"></i></a>
    </div>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>DNI</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        {% for persona in personas %}
            <tr>
                <td>{{ persona.nombre }}</td>
                <td>{{ persona.apellido }}</td>
                <td>{{ persona.dni }}</td>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('banco_personas') }}" class="btn btn-default ttp" data-toggle="tooltip" data-placement="top" title="Editar"><i class="glyphicon glyphicon-pencil"></i></a>
                        <a href="{{ path('banco_personas') }}" class="btn btn-default ttp" data-toggle="tooltip" data-placement="top" title="Ver"><i class="glyphicon glyphicon-search"></i></a>
                        <a href="{{ path('banco_personas') }}" class="btn btn-default ttp" data-toggle="tooltip" data-placement="top" title="Expirar"><i class="glyphicon glyphicon-time"></i></a>
                        <a href="{{ path('banco_personas') }}" class="btn btn-default ttp" data-toggle="tooltip" data-placement="top" title="Bloquear"><i class="glyphicon glyphicon-remove-sign"></i></a>
                        <a href="{{ path('banco_personas') }}" class="btn btn-default ttp" data-toggle="tooltip" data-placement="top" title="Inhabilitar"><i class="glyphicon glyphicon-off"></i></a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No se encontraron Personas</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <script>
        $('.ttp').tooltip();
    </script>
{% endblock %}